    <style name="ApplicationTheme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1a1a1a</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_openvk_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1280</item>
        <item name="postSplashScreenTheme">@style/ApplicationTheme</item>
    </style>

    <style name="ApplicationTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#86ffffff</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">#86ffffff</item>
        <item name="titleTextStyle">?attr/textAppearanceHeadline3</item>
        <item name="popupTheme">@style/ApplicationTheme.DarkPopupMenuOverlay</item>
        <item name="actionOverflowMenuStyle">@style/ApplicationTheme.DarkPopupMenu</item>
    </style>

    <style name="ApplicationTheme.DarkPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
    </style>

    <style name="ApplicationTheme.DarkPopupMenuOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:itemBackground">@drawable/item_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ApplicationTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/navbarColor</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ApplicationTheme.Navigation" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="listPreferredItemHeightSmall">36dp</item>
    </style>

    <style name="ApplicationTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="rippleColor">?attr/rippleColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ApplicationTheme.Button.Borderless" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">?attr/rippleColor</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ApplicationTheme.Button.Borderless.NoCaps"  parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">?attr/rippleColor</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ApplicationFont.ToolBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="titleTextStyle">?attr/textAppearanceHeadline3</item>
    </style>
