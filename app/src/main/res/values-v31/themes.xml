<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme #10. Monet color theme (MD2-based, not fully supported in Android SDK 30 and lower) -->
    <style name="ApplicationTheme.Monet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/material_dynamic_primary60</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary60</item>
        <item name="colorPrimaryDark">@color/material_dynamic_primary50</item>
        <item name="rippleColor">@color/material_dynamic_primary90</item>
        <item name="colorAccent">@color/material_dynamic_primary50</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="iconPreferenceColor">@color/material_dynamic_primary50</item>
        <item name="preferenceTheme">@style/ApplicationTheme.Preference</item>
        <item name="bottomNavigationStyle">@style/ApplicationTheme.BottomNavigation</item>
        <item name="navigationViewStyle">@style/ApplicationTheme.Navigation</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

</resources>