    </style>

    <style name="ApplicationTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/navbarColor</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ApplicationTheme.Navigation" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="listPreferredItemHeightSmall">36dp</item>
    </style>

    <style name="ApplicationTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorSurface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/ApplicationTheme.AlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/ApplicationTheme.AlertDialog.BodyText</item>
        <item name="buttonStyle">@style/ApplicationTheme.AlertDialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/ApplicationTheme.AlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/ApplicationTheme.AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/ApplicationTheme.AlertDialog.Button</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="singleChoiceItemLayout">@layout/list_item_single_choice</item>
        <item name="alertDialogStyle">@style/ApplicationTheme.AlertDialog.Container</item>
    </style>

    <style name="ApplicationTheme.AlertDialog.Container" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Round8</item>
    </style>

    <style name="ApplicationTheme.AlertDialog.BodyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ApplicationTheme.AlertDialog.Title" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontWeight">500</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

