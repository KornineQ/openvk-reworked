    <style name="ApplicationTheme.Preference" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="ApplicationTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="backgroundColor">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/backgroundColor</item>
        <item name="android:textColorSecondary">#86ffffff</item>
        <item name="colorOnPrimary">@color/backgroundColor</item>
        <item name="colorOnSecondary">#86ffffff</item>
        <item name="titleTextStyle">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="ApplicationTheme.Toolbar.Dark" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="backgroundColor">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/backgroundColor</item>
        <item name="android:textColorSecondary">#86ffffff</item>
        <item name="colorOnPrimary">@color/backgroundColor</item>
        <item name="colorOnSecondary">#86ffffff</item>
        <item name="titleTextStyle">?attr/textAppearanceHeadline3</item>
        <item name="popupTheme">@style/ApplicationTheme.LightPopupMenuOverlay</item>
    </style>

    <style name="ApplicationTheme.LightPopupMenuOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ApplicationTheme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#ffffff</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_openvk_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1280</item>
        <item name="postSplashScreenTheme">@style/ApplicationTheme</item>
    </style>

    <style name="ApplicationTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="rippleColor">?attr/rippleColor</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ApplicationTheme.Button.Borderless" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">?attr/rippleColor</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ApplicationTheme.Button.Borderless.NoCaps" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">?attr/rippleColor</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ApplicationTheme.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
