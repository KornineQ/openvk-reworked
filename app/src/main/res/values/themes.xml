        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round8" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round16" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round32" parent="">
